{{>partials/header}}

<fieldset>
    <legend>Adicionar novos usuários</legend>
    <form method="POST" action="/new-user">
        <input type="text" name="firstName" placeholder="Digite seu nome"/><br>
        <input type="text" name="lastName" placeholder="Digite seu sobrenome"/><br>
        <input type="email" name="email" placeholder="Digite seu email"/><br>
        <input type="text" name="age" placeholder="Digite sua idade"/><br>
        <input type="text" name="interests" placeholder="Digite seus interesses"/><br>
        <input type="submit" value="Inserir"/>
    </form>
</fieldset>

<h3>Usuários</h4>
<ul>
{{#users}}
    <li>{{name.firstName}} - {{age}} anos - {{email}} - 
        <a href="/user/{{_id}}/addage">+1 ano de vida</a> OU <a href="/user/{{_id}}/decrementage">-1 ano de vida</a> 
        -> <a href="/user/{{_id}}/remove">REMOVER</a>
    </li>
{{/users}}
</ul>

{{>partials/footer}}